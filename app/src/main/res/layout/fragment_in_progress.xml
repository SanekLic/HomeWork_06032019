<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/playPodcastOneImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_photo_4" />

    <TextView
        android:id="@+id/playPodcastOneTitleTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:lines="1"
        android:text="Some podcast"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/podcastOneContinuePlayButton"
        app:layout_constraintStart_toEndOf="@+id/playPodcastOneImageView"
        app:layout_constraintTop_toTopOf="@+id/playPodcastOneImageView" />

    <TextView
        android:id="@+id/timePlayPodcastOneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="1 days ago â€¢ left 32 min"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/playPodcastOneImageView"
        app:layout_constraintStart_toEndOf="@+id/playPodcastOneImageView" />

    <Button
        android:id="@+id/podcastOneContinuePlayButton"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/ic_play_circle"
        app:layout_constraintBottom_toBottomOf="@+id/playPodcastOneImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/playPodcastOneImageView" />

    <View
        android:id="@+id/divider1"
        style="@style/Divider1dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playPodcastOneImageView" />
</android.support.constraint.ConstraintLayout>